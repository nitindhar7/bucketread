<div id="main_content_wrapper">
	<div id="main_content">
		<% form_tag authorize_path, :method => :post, :id => "login_form" do %>
			<div class="title">Login in to BucketRead</div>
			<div class="content">
				<%= label_tag :email %>
				<%= text_field_tag :email, params[:email], :class => "field" %>
				<%= label_tag :password %>
				<%= password_field_tag :password, nil, :class => "field" %>
				<%= submit_tag "Login", :class => "button" %>
			</div>
		<% end %>
	</div>
</div>